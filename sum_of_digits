import java.util.*;
public class Helo{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int r,x,sum=0;
            
        System.out.println("Digits are :");
        while(n!=0)
        {
            r=n%10;
             System.out.println(r);
             sum+=r;
            n=n/10;
            
       
        
        }
        System.out.println("Sum of the digits is "+sum);
    
    }
}
